<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   
    <%= form_for(@user) do |f| %>
    <table>
     <tr> 
     <td><%= f.label :name %></td> 
      
     <td> <%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
      
     <td> <%= f.email_field :email %></td>
   </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
      
          <tr><td><%= f.submit "Create my account", class: "btn btn-primary" %></td></tr>
        </table>
    <% end %>
  
  </div>
</div>